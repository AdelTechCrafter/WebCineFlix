<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<display-name>WebCineFlix</display-name>
	<servlet>
		<servlet-name>HelloWorld</servlet-name>
		<servlet-class>servlet.HelloWorld</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CreateUser</servlet-name>
		<servlet-class>servlet.user.CreateUser</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DeleteUser</servlet-name>
		<servlet-class>servlet.user.DeleteUser</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SearchMessage</servlet-name>
		<servlet-class>servlet.message.SearchMessage</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>servlet.user.Login</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Logout</servlet-name>
		<servlet-class>servlet.user.Logout</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AddFriend</servlet-name>
		<servlet-class>servlet.friend.AddFriend</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>RemoveFriend</servlet-name>
		<servlet-class>servlet.friend.RemoveFriend</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>AddMessage</servlet-name>
		<servlet-class>servlet.message.AddMessage</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>AddMessageMain</servlet-name>
		<servlet-class>servlet.message.AddMessageMain</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>RemoveMessage</servlet-name>
		<servlet-class>servlet.message.RemoveMessage</servlet-class>
	</servlet>			

	<servlet>
		<servlet-name>ListMessage</servlet-name>
		<servlet-class>servlet.message.ListMessage</servlet-class>
	</servlet>			

	<servlet>
		<servlet-name>ListMessageMain</servlet-name>
		<servlet-class>servlet.message.ListMessageMain</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>AddComment</servlet-name>
		<servlet-class>servlet.comments.AddComment</servlet-class>
	</servlet>
				
	
	<servlet-mapping>
		<servlet-name>HelloWorld</servlet-name>
		<url-pattern>/HelloWorld</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CreateUser</servlet-name>
		<url-pattern>/CreateUser</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DeleteUser</servlet-name>
		<url-pattern>/DeleteUser</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SearchMessage</servlet-name>
		<url-pattern>/SearchMessage</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/Login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Logout</servlet-name>
		<url-pattern>/Logout</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AddFriend</servlet-name>
		<url-pattern>/AddFriend</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RemoveFriend</servlet-name>
		<url-pattern>/RemoveFriend</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>AddMessage</servlet-name>
		<url-pattern>/AddMessage</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>AddMessageMain</servlet-name>
		<url-pattern>/AddMessageMain</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>RemoveMessage</servlet-name>
		<url-pattern>/RemoveMessage</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>ListMessage</servlet-name>
		<url-pattern>/ListMessage</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>ListMessageMain</servlet-name>
		<url-pattern>/ListMessageMain</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>AddComment</servlet-name>
		<url-pattern>/AddComment</url-pattern>
	</servlet-mapping>
</web-app>